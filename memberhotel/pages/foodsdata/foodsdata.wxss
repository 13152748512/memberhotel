/* 底部购物车 */

.bottomcar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-top: 4rpx solid #ebebeb;
}

.publicwidth {
  width: 50%;
}

.bottomcar image {
  width: 30rpx;
  height: 30rpx;
}

.carshop {
  display: inline-block;
  text-align: center;
  padding-top: 10rpx;
  color: #a4a4a4;
  font-size: 20rpx;
}

.car {
  color: #a4a4a4;
  font-size: 20rpx;
  display: inline-block;
  text-align: center;
  padding-top: 10rpx;
  position: relative;
}

.carnumber {
  position: absolute;
  top: -4rpx;
  right: 46rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  background-color: #e96d2e;
  color: #fff;
  border-radius: 20rpx;
}

.carpublic {
  width: 50%;
  display: inline-block;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}

.addcar {
  background-color: #f3bd41;
}

.prompay {
  background-color: #ed742e;
}
