@import '../../app.wxss';
.headerimg image{
  width: 100%;
  height: 300rpx;
}
.moneynum{
  width: 100%;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-top:25rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.publicbutton{
  width: 27%;
  height: 160rpx;
  box-shadow: 0 0 8rpx #888888;
  display: inline-block;
  margin:0 0 30rpx 0;
  padding: 44rpx 0;
  box-sizing: border-box;
  border:1px solid transparent;
}
.publicbutton view{
  text-align: center;
}
.amountEntered{
  width:80%;
  border-bottom:1px solid #ECDD24;
  margin:0 auto;
}
.amountEntered input{
  display: inline-block;
  margin-left: 10rpx;
  padding: 0rpx 10rpx;
}
.amountEntered text{
  position: relative;
  top: -14rpx;
  font-size:0.7rem;
}
.text{
  font-size: 0.8rem;
}
.custom{
  margin-top: 20rpx;
}
.examine{
  width: 100%;
  height: 80rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 30rpx;
  border-bottom: 1px solid #E6E6E6;
  color:#9D9D9D;
}
.btn{
  width: 90%;
  color:#888888;
  font-size:0.8rem;
  height:85rpx;
  line-height: 85rpx;
}
.btnstyle{
  color: #fff;
  background-color:#FF0000;
}
.figure{
  width: 100%;
  padding:0 80rpx;
  box-sizing: border-box;
  margin:30rpx 0 50rpx 0;
  display: flex;
  justify-content: space-between;
}
.color{
  border-color:#FF0000;
}
.bck{
  background: #FF0000;
  color: #fff
}