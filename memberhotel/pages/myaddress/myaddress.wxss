page{
  width: 100%;
  height: 100%;
  /* background: #F7F7F7; */
  background-color: rgba(255, 255, 255, 1);
}
.addevent{
  width: 100%;
  height:120rpx;
  background: #fff;
  margin-top:20rpx; 
  padding-top: 27rpx;
  box-sizing: border-box;
}
.addevent view{
  width: 280rpx;
  height: 66rpx;
  text-align: center;
  border: 1px solid #868686;
  margin:0rpx 0rpx 0rpx -140rpx;
  position: relative;
  left:50%;
  border-radius: 5px;
}
.addevent image{
  width: 40rpx;
  height: 40rpx;
  vertical-align:bottom;
  margin:12rpx 8rpx 0 0;
}
.addevent text{
  color:#47C73B;
  letter-spacing:1px;
  margin:12rpx 0rpx 0rpx 8rpx;
  display:inline-block;
}
.site image{
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  position: relative;
  top:-2px; 
}
.site{
  margin: 24rpx 0;
  background: #fff;
  padding-top:30rpx;
  box-sizing: border-box; 
  border-top: 1px solid #EDEDED;
}
.namephone{
  width: 100%;
  margin:0rpx 0 30rpx 20rpx;
  overflow: hidden;
}
.location{
  margin: 0  0 30rpx 20rpx;
}
.name{
  margin-right: 90rpx;
}
.namephone text,.location text{
  margin-left: 16rpx;
}
.handle{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  border:1px solid #EDEDED;
  border-left:none;
  border-right:none;  
  display: flex;
  justify-content: space-between;
}
.handle text{
  display: inline-block;
  width: 33.3%;
  text-align: center;
}
.marked{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #8E8E8E;
}
.main{
  width: 100%;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  border-top:1px solid #E6E6E6;
  border-bottom: 1px solid #E6E6E6;
  background-color: #fff;
}
.uname,.phone,.choicedq,.address{
  padding: 15rpx 0;
  border-bottom: 1px solid #E6E6E6;
  color: #000;
  display: flex;
  justify-content: flex-start;
}
.address{border-bottom: none}
.uname text,.phone text,.choicedq text,.address text{
  font-size:0.8rem;
  display:inline-block;
  margin-top:6rpx;
  width:30%;
}
.address text{
  margin-top: 12rpx;
}
.uname input,.phone input,.choicedq view,.address textarea{
  width: 60%;
}
.address textarea{
  height: 100rpx;
  margin-top: 12rpx;
}
.Province{
  margin-top:4rpx;
  font-size:0.77rem;
}
.btnwx,.btn{
  width: 90%;
  color: #000;
  margin-top: 20rpx;
  font-size: 0.8rem;
}
.btn{
  color: #fff !important;
  background: #19AD17 !important;
}
.gules{
  color:crimson;
}
.dingwei{
  width:65rpx;
  height:65rpx;
  margin-top:20rpx;
}
