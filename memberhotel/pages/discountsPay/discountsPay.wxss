page{
  width: 100%;
  height:100%;
  background:#F7F7F7 !important;
}
.psges{
  background:#fff !important;
  color:#252525;
}
.paytop{
  width:100%;
  height:100%;
  padding:45rpx;
  box-sizing: border-box;
}
.payinput{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  border: 1px solid #D4D4D4;
  border-radius: 6px;
  padding:0rpx 5px;
  box-sizing: border-box;
  background:#fff;
  margin-bottom:45rpx;
}
.payinput1{
  margin:45rpx 0rpx 0rpx 0rpx;
}
.payinput input{
  margin-top:15rpx;
}
.checkbox{
  position: relative;
  top:-1px;
}
.membercard{
  width: 20rpx;
  height: 35rpx;
  margin-top: 20rpx;
}
.money,.guestbook{
  width:100%;
  height:80rpx;
  line-height:80rpx; 
  padding:0rpx 45rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom:45rpx;
}
.guestbook{
  margin-bottom:22.5rpx !important;
}
.money-sum{
  display: inline-block;
  text-align: right;
  overflow: hidden;
  text-overflow:ellipsis;
  width:60%;
  color:#FA3131;
}
.btn{
  width:600rpx;
  background-color:#E54340;
  color:#fff;
}
.text{
  width:100%;
  height: 250rpx;
  margin-bottom:45rpx;
  padding:25rpx 45rpx;
  box-sizing: border-box;
  background: #fff;
}
.text textarea{
  width:100%;
  height:200rpx;
  border: 1px solid #D4D4D4;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  border-radius: 5px; 
  background: #F7F7F7;
}
